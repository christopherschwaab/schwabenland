SUMMARY="An extension of beamer for creating posters in LaTeX."
HPBASEURI="http://www-i6.informatik.rwth-aachen.de/~dreuw/"
HOMEPAGE="${HPBASEURI}/latexbeamerposter.php"
DLBASEURI="${HPBASEURI}/download"
DOWNLOADS="
    ${DLBASEURI}/${PN}.sty.${PV} -> ${PN}.sty
    ${DLBASEURI}/beamerthemeIcy.sty
    ${DLBASEURI}/beamerthemeAachen.sty
    ${DLBASEURI}/beamerthemeI6pd.sty
    ${DLBASEURI}/beamerthemeI6pd2.sty
    ${DLBASEURI}/beamerthemeI6dv.sty
    ${DLBASEURI}/beamerthemeI6td.sty
"

LICENCES="|| ( GPL-2 LLPL-1.3 )"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-tex/latex-beamer
        dev-texlive/texlive-latexextra
"

BUGS_TO=""

WORK="${WORKBASE}"

TEX_DIR="/usr/share/texmf-site"
src_compile() {
    :
}

src_install() {
    insinto "${TEX_DIR}/tex/latex/beamerposter"
    doins "${FETCHEDDIR}/${PN}.sty"
    insinto "/usr/share/doc/${PNVR}/themes"
    doins "${FETCHEDDIR}"/beamertheme*.sty
}

pkg_postinst() {
    etexmf-update
}

pkg_postrm() {
    etexmf-update
}
