require hackage

SUMMARY="Simple ANSI terminal support, with Windows compatibility"
HOMEPAGE="http://github.com/batterseapower/ansi-terminal ${HOMEPAGE}"
DESCRIPTION="ANSI terminal support for Haskell: allows cursor movement,
screen clearing, color output showing or hiding the cursor, and changing
the title. Compatible with Windows and those Unixes with ANSI terminals,
but only GHC is supported as a compiler."

LICENCES="BSD-3"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    $(haskell_lib_dependencies "
        dev-haskell/unix[>=2.3.0.0]
    ")
"

