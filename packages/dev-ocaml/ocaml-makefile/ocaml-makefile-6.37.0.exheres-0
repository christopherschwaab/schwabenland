SUMMARY="A simple generic makefile for ocaml-projects."
HOMEPAGE="https://bitbucket.org/mmottl/${PN}"
DOWNLOADS="https://bitbucket.org/mmottl/${PN}/downloads/${PNV}.tar.gz"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="examples"

DEPENDENCIES="
    build+run:
        dev-lang/ocaml
        dev-ocaml/findlib
"

src_install() {
    default
    insinto "/usr/include"
    doins OCamlMakefile

    dodoc README.md CHANGES.txt
    option examples && dodoc -r calc camlp4 gtk idl threads
}
