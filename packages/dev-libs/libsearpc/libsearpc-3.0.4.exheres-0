require seafile [ seafile_version=3.0.4 ]

SUMMARY="A simple and easy-to-use C language RPC framework (including both server side & client side) based on GObject System."

LICENCES="GPL-3"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="
    compile-demo [[ description = [ Build searpc client/server demo. ] ]]
"

DEPENDENCIES="
    build+run:
        dev-libs/glib:2[>=2.26.0]
        dev-libs/jansson[>=2.2.1]
        dev-python/simplejson:0[python_abis:2.7]
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( compile-demo )

