require autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.13 1.12 ] ]

SUMMARY="An implementation of the Boehm-Demers-Weiser conservative garbage collector that can be used as a garbage collecting replacement for C malloc or C++ new."
HOMEPAGE="http://www.hpl.hp.com/personal/Hans_Boehm/gc/"
DOWNLOADS="http://www.hpl.hp.com/personal/Hans_Boehm/gc/gc_source/${PNV}.tar.gz"

LICENCES="libgc"
SLOT="0"
PLATFORMS="~amd64 ~x86"

src_unpack() {
    mkdir -p "${WORK}"
    tar --strip-components=1 -xaf "${FETCHEDDIR}/${ARCHIVES}" -C "${WORK}"
}
